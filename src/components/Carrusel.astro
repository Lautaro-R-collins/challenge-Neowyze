---
import "swiper/swiper-bundle.css";
import { carouselData } from '../mocks/carouselData'; 
---
<section class="swiper-container relative overflow-hidden px-5 py-10 justify-start items-start gap-8 xlg:px-[80px] xlg:py-20 xlg:flex-col xlg:justify-start xlg:items-start xlg:gap-8 xxl:px-[140px] xxl:py-20 xxl:flex-col xxl:justify-start xxl:items-start xxl:gap-8">
    <h2 class="self-stretch text-primary text-2xl font-extrabold font-['Manrope'] uppercase tracking-[4.08px] mb-8">
        NUESTROS TRABAJOS
    </h2>

    <div class="swiper-wrapper xlg:h-[420px] h-[575px] justify-start items-center gap-8 inline-flex">
        {carouselData.map((item) => (
            <div class="swiper-slide min-w-max xlg:h-[420px] h-[575px] justify-center items-center inline-flex" >
                <img
                    src={item.src}
                    alt={item.alt}
                    class="w-full xlg:h-[420px] h-[575px] object-cover rounded-lg shadow-lg"
                />
                <p class="self-stretch text-mutedText text-xl font-medium font-['Manrope'] leading-10">
                    {item.title}
                </p>
            </div>
        ))}
    </div>
</section>


<script>
    import Swiper from "swiper/bundle";

    const swiper = new Swiper(".swiper-container", {
        slidesPerView: 1,
        loop: true,
        // autoplay: {
        //     delay: 1000,
        // },
        breakpoints: {
            // Vercion mobil
            375: {
                slidesPerView: 3,
                spaceBetween: 20,
            },
        },
    });
</script>
