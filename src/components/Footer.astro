---
import Whatsapp from "../assets/Icons/Whatsapp.astro";
import Facebook from "../assets/Icons/Facebook.astro";
import Instagram from "../assets/Icons/Instagram.astro";

const socialIcons = [
  { component: Instagram, name: "Instagram" },
  { component: Facebook, name: "Facebook" },
  { component: Whatsapp, name: "Whatsapp" },
];

const links = [
  { href: "#", text: "Nosotros" },
  { href: "#", text: "Servicios" },
  { href: "#", text: "Impronta" },
];
---

<footer
  id="contact"
  class="h-[279px] px-8 py-[74px] bg-primary flex flex-col justify-center items-center gap-6"
>
  <h2
    class="text-center text-white text-2xl font-extrabold font-['Manrope'] leading-[44.80px]"
  >
    Contáctanos
  </h2>

  <!-- Íconos de redes sociales -->
  <div class="flex justify-center items-center gap-6 cursor-pointer">
    {socialIcons.map((icon) => (
      <div
        class="w-[57px] h-[57px] rounded-full border border-white flex justify-center items-center transition duration-300 hover:bg-secondary"
      >
        <icon.component />
      </div>
    ))}
  </div>

  <!-- Links -->
  <div class="flex justify-center items-center gap-8">
    {links.map((link) => (
      <a
        href={link.href}
        class="text-white text-base font-bold font-['Manrope'] capitalize hover:text-secondary hover:border-b-2 hover:border-secondary transition duration-300"
  
      >
        {link.text}
      </a>
    ))}
  </div>
</footer>
